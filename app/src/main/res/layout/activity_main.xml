<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="59dp" />


        <Button
            android:id="@+id/markCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark Current Location" />
        android:text="Mark Your Current Location" />

        <TextView
            android:id="@+id/purpose"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="What is the purpose of your visit? "
            android:textSize="24sp" />


        <Button
            android:id="@+id/Clubbing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clubbing/Bar hopping" />

        <Button
            android:id="@+id/eat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eating out" />

        <Button
            android:id="@+id/festival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Festival" />

        <Button
            android:id="@+id/socializing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Socializing" />

        <Button
            android:id="@+id/Academics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academics" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphnew"
            android:layout_width="match_parent"
            android:layout_height="367dp" />






    </LinearLayout>
</ScrollView>